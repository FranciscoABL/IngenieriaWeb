@page
@model EditarModel

<h1>Detalles </h1>

<form method="POST" enctype="multipart/form-data"  >
  <div class="form-group">
    <label for="NumeroControl">Numero Control</label>
    <input type="hidden" name="NumeroControl" class="form-control"
         id="NumeroControl" aria-describedby="" value="@Model.Detalle.NumeroControl">
   <span>@Model.Detalle.NumeroControl</span>
    
  </div>
  <div class="form-group">
    <label for="Nombre">Nombre</label>
    <input type="text" name="Nombre" class="form-control"
         id="Nombre" aria-describedby="" value="@Model.Detalle.Nombre">
        @* <input asp-for="NuevoEstudiante.Nombre" /> *@
    
  </div>
  <div class="form-group">
    <label for="Carrera">Carrera</label>
    <input type="text" class="form-control"
        name="Carrera" id="Carrera" aria-describedby="" value="@Model.Detalle.Carrera">
    
  </div>

  <div class="form-group">
    <label for="Foto">Nueva Imagen</label>
    <input type="file" class="form-control"
        name="Foto" id="Foto" aria-describedby="" value="@Model.Detalle.Carrera">
  </div>
  
  <a asp-page="./Index" class="btn btn-info">Regresar</a>
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>